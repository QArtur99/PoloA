<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/background"
                tools:context="com.artf.poloa.view.activity.DetailsActivity">

    <LinearLayout
        android:id="@+id/section1"
        style="@style/LinearViewStyle"
        android:layout_alignParentStart="true">

        <GridLayout
            style="@style/GridViewStyle">

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Dont care balance: "/>

            <TextView
                android:id="@+id/dontCareBalance"
                style="@style/DetailsTextStyle"/>

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Balance: "/>

            <TextView
                android:id="@+id/balanceSelectedCC"
                style="@style/DetailsTextStyle"/>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section2"
        style="@style/LinearViewStyle"
        android:layout_below="@+id/section1">

        <GridLayout
            style="@style/GridViewStyle">

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Mode: "/>

            <TextView
                android:id="@+id/tradeMode"
                style="@style/DetailsTextStyle"/>
        </GridLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/section3"
        style="@style/LinearViewStyle"
        android:layout_below="@+id/section2">

        <GridLayout
            style="@style/GridViewStyle">

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Price: "/>

            <TextView
                android:id="@+id/lastValueCC"
                style="@style/DetailsTextStyle"/>

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Rare of last buy: "/>

            <TextView
                android:id="@+id/rateOfLastBuy"
                style="@style/DetailsTextStyle"/>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section4"
        style="@style/LinearViewStyle"
        android:layout_below="@+id/section3">

        <GridLayout
            style="@style/GridViewStyle">

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Ema value: "/>

            <TextView
                android:id="@+id/emaValue"
                style="@style/DetailsTextStyle"/>

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Rmi value: "/>


            <TextView
                android:id="@+id/rmiValue"
                style="@style/DetailsTextStyle"/>

            <TextView
                style="@style/DetailsTextStyle"
                android:text="Rmi signal: "/>

            <TextView
                android:id="@+id/rmiSingal"
                style="@style/DetailsTextStyle"/>
        </GridLayout>
    </LinearLayout>


</RelativeLayout>
